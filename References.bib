keywords = {electroencephalogram,human–computer interaction,neuroadaptive technology,passive brain–computer interfaces,predictive coding},
mendeley-groups = {Thesis},
month = {dec},
number = {52},
pages = {14898--14903},
pmid = {27956633},
publisher = {National Academy of Sciences},
