booktitle = {International Conference on Human-Computer Interaction HCII 2020},
doi = {10.1007/978-3-030-50726-8},
editor = {{Stephanidis C.}, Antona M.},
isbn = {9783030507268},
keywords = {BCI,Motor Imagery,Motor learning,e-sports},
mendeley-groups = {ErrP},
month = {jul},
pages = {581--586},
publisher = {Springer, Cham},
title = {{BCI-Controlled Motor Imagery Training Can Improve Performance in e-Sports}},
url = {http://link.springer.com/10.1007/978-3-030-50726-8{\_}76},
volume = {1},
year = {2020}
